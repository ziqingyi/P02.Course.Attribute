<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>News page</title>
    <script type="text/javascript">
        alert("script in script tag");

        var sexValue1 =document.getElementById("uniqueId3");//undefined

        //var sex = document.getElementsByName("sex");

        document.write("document write in script tag " + sexValue1 + typeof (sexValue1));

        //execute when page compile finish.
        window.onload = function() {//anonymous function
            var sex = document.getElementById("uniqueId3");//show male
            alert("page finish, uniqueId3 is " + sex.value);
            document.getElementById("divAd").style.display = "block";
        }

        function check() {
            var ss = document.getElementById("uniqueId4");
            alert(ss.value+"  this is js function in script");
        }
        function promptWindow() {
            var result = prompt("notice", "confirm or not");
            alert(result);
        }

        function confirmFunction() {
            var result = window.confirm("do you want to update? ");
            alert("you select " + result);
            if (result) {
                alert("update successfully!!!");
            } else {
                window.alert("no update");
            }
        }

        function closeTab() {
            if (confirm("close this tab? ")) {
                window.location.href = "about:blank";
                window.close();
            }
        }

        function OpenNewPage() {
            window.open("/HTML/Index","adv","height=500,width=800");
        }

        setTimeout("confirmFunction();", 10000);//just delay 10 seconds

        var IntMethod =setInterval("IntervalPassed()",5000);

        function IntervalPassed() {
            var result = window.confirm("some seconds passed, just alert");
            if (result) {
                window.clearInterval(IntMethod);
            }
        }

    </script>
</head>
<body>
<div>
